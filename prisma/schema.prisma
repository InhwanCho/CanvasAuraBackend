generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(cuid())
  name        String?
  email       String        @unique
  password    String
  imageUrl    String        @default("/characters/anonymous.png")
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  DrawHistory DrawHistory[]
}

model board {
  id           String         @id
  title        String
  orgId        String
  authorId     String
  authorName   String
  imageUrl     String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  userfavorite userfavorite[]
  DrawHistory  DrawHistory[]
}

model userfavorite {
  id      String @id
  orgId   String
  userId  String
  boardId String
  board   board  @relation(fields: [boardId], references: [id], map: "UserFavorite_boardId_fkey")

  @@unique([userId, boardId], map: "UserFavorite_userId_boardId_key")
  @@index([boardId], map: "UserFavorite_boardId_fkey")
}

model DrawHistory {
  id        String   @id @default(cuid())
  boardId   String
  userId    String
  path      String   @db.Text
  color     String
  createdAt DateTime @default(now())
  board     board    @relation(fields: [boardId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}
